/* components/picviewbox/index.wxss */
.content {
  height: 100%;  
  background-color: rgba(26, 26, 26, 0.658);
  display:flex;
  align-items:center; 
  justify-content:center;
  flex-direction:row;
}

.content-rotate {
  height: 100%;  
  background-color: rgba(26, 26, 26, 0.658);
  display:flex;
  align-items:center; 
  justify-content:center;
  flex-direction:column;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.images image {
  text-align: center;
  position: absolute;
}

.images{
  overflow:hidden;
  background-color: rgb(230, 228, 228);
  box-shadow: 0px 0px 10px rgba(134, 134, 134, 0.829);
  
  /* transition: transform 1s; */
}


.img-normal{
  width:95%;
  height:80%;
  transform:rotate(0deg);
  transition: transform 0.5s;
  
  /* transition: transform 0.5s,height 0.1s, width 0.1s,left 0.1s,top 0.1s; */
  /* ,height 0.2s, width 0.2s */
}

.img-rotate{
  width:80vh;
  height:90vw;
  /* width:1100px;
  height:350px; */
  transform:rotate(90deg);
  transition: transform 0.5s;
}

page{
  height: 100%;
}